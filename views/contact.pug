extends base.pug

block scripts 
    script(src="/static/index.js")

block style
    style 
        include ../static/style.css
        include ../static/contact.css

block content
    div.contactContainer
        h1 Contact Us
        form(action="/contact" method="post" class="enquiryForm")  
            input(type="text" class="contactInput"  name="name" placeholder="Enter Your Name")
            input(type="number" class="contactInput" name="phone" placeholder="Enter Your Phone")
            input(type="email" class="contactInput" name="email" placeholder="Enter Your Email")
            input(type="text" class="contactInput" name="address" placeholder="Enter Your Address")
            input(type="text" class="contactInput" name="desc" placeholder="Enter Your Concern")
            button(class=".btn" id="formSubmit")
                | Submit 